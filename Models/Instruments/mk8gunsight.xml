<?xml version="1.0"?>
<PropertyList>

 <path>mk8gunsight.ac</path>

 <animation>
  <type>material</type>
  <object-name>crosshair</object-name>
  <object-name>lamp</object-name>
  <emission>
    <factor-prop>controls/lighting/gunsight-norm</factor-prop>
    <red>1.0</red>
    <green>0.8</green>
    <blue>0.8</blue>
  </emission>
 </animation>

 <animation>
  <type>select</type>
  <object-name>crosshair</object-name>
  <condition>
   <equals>
    <property>controls/lighting/gunsight-on</property>
    <value>true</value>
   </equals>
  </condition>
 </animation>

<animation>
  <type>texmultiple</type>
  <object-name>crosshair</object-name>
  <transform>
    <property>sim/current-view/y-offset-m</property>
    <subtype>textranslate</subtype>
    <factor>1</factor>
    <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
  </transform>
  <transform>
    <property>sim/current-view/x-offset-m</property>
    <subtype>textranslate</subtype>
    <center>
     <x>0.50</x>
     <y>0.50</y>
   </center>
    <axis>
     <x>1</x>
     <y>0</y>
     <z>0</z>
   </axis>
  </transform>
 </animation>




