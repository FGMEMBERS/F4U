<?xml version="1.0"?>
<PropertyList>
<!-- dust -->
   <particlesystem>
	    <name>dust</name>
			<type>normal</type>
      <texture>dust.png</texture>
	    <emissive>false</emissive>
	    <lighting>false</lighting>
	    
	    <offsets>
	      <x-m>1.8</x-m>
	      <y-m>0</y-m>
	      <z-m>0</z-m>
	      <!--<pitch-deg>90</pitch-deg>-->
	    </offsets>
	    
	    <attach>world</attach>
	    
	    <placer>
	      <type>point</type>
	    </placer>
	    
	    <shooter>
	      <theta-min-deg>-10</theta-min-deg>
	      <theta-max-deg>10</theta-max-deg>
	      <phi-min-deg>-98</phi-min-deg>
	      <phi-max-deg>98</phi-max-deg>
	      <speed>
	        <value>60</value>
	        <spread>10</spread>
	      </speed>
	      <rotspeed>
	        <minx>0</minx>
	        <miny>0</miny>
	        <minz>0</minz>
	        <maxx>0</maxx>
	        <maxy>0</maxy>
	        <maxz>0</maxz>
	      </rotspeed>
	    </shooter>
	    
	    <counter>
	      <pps>
	        <value>20</value>
	        <spread>4</spread>
	      </pps>
	      <condition>
  				<smaller-than>
    				<property>sim/model/aircraft/impact/splash</property>
    				<value>1</value>
   				</smaller-than>
  			</condition>
	      
	    </counter>
	    
	    <align>billboard</align>
	    
	    <particle>
	      <startcolor>
	        <red>
	          <value>0.3</value>
	        </red>
	        <green>
	          <value>0.3</value>
	        </green>
	        <blue>
	          <value>0.3</value>
	        </blue>
	        <alpha>
	          <value>0.7</value>
	        </alpha>
	      </startcolor>
	      <endcolor>
	        <red>
	          <value>0.5</value>
	        </red>
	        <green>
	          <value>0.5</value>
	        </green>
	        <blue>
	          <value>0.5</value>
	        </blue>
	        <alpha>
	          <value>0.5</value>
	        </alpha>
	      </endcolor>
	      <startsize>
	        <value>1.7</value>
	      </startsize>
	      <endsize>
        <value>2.5</value>
	      </endsize>
		      <life-sec>
	        <value>0.5</value>
	      </life-sec>
	      <mass-kg>0.05</mass-kg>
	      <radius-m>0.07</radius-m>
		    </particle>
	    
	    <program>
	      <fluid>air</fluid>
	      <gravity>enabled</gravity>
	      <wind>disabled</wind>
	    </program>
	    
	</particlesystem>
<!-- splash -->
   <particlesystem>
	    <name>splash</name>
			<type>normal</type>
      <texture>splash.png</texture>
	    <emissive>false</emissive>
	    <lighting>true</lighting>
	    
	    <offsets>
	      <x-m>0.0</x-m>
	      <y-m>0</y-m>
	      <z-m>0</z-m>
	      <!--<pitch-deg>90</pitch-deg>-->
	    </offsets>
	    
	    <attach>world</attach>
	    
	    <placer>
	      <type>point</type>
	    </placer>
	    
	    <shooter>
	      <theta-min-deg>-10</theta-min-deg>
	      <theta-max-deg>10</theta-max-deg>
	      <phi-min-deg>-98</phi-min-deg>
	      <phi-max-deg>98</phi-max-deg>
	      <speed>
	        <value>30</value>
	        <spread>5</spread>
	      </speed>
	      <rotspeed>
	        <minx>0</minx>
	        <miny>0</miny>
	        <minz>0</minz>
	        <maxx>0</maxx>
	        <maxy>0</maxy>
	        <maxz>0</maxz>
	      </rotspeed>
	    </shooter>
	    
	    <counter>
	      <pps>
	        <value>20</value>
	        <spread>4</spread>
	      </pps>
	      <condition>
  				<equals>
    				<property>sim/model/aircraft/impact/splash</property>
    				<value>1</value>
   				</equals>
  			</condition>
	    </counter>
	    
	    <align>billboard</align>
	    
	    <particle>
	      <startcolor>
	        <red>
	          <value>0.8</value>
	        </red>
	        <green>
	          <value>0.8</value>
	        </green>
	        <blue>
	          <value>0.8</value>
	        </blue>
	        <alpha>
	          <value>0.7</value>
	        </alpha>
	      </startcolor>
	      <endcolor>
	        <red>
	          <value>0.5</value>
	        </red>
	        <green>
	          <value>0.5</value>
	        </green>
	        <blue>
	          <value>0.5</value>
	        </blue>
	        <alpha>
	          <value>0.1</value>
	        </alpha>
	      </endcolor>
	      <startsize>
	        <value>1.7</value>
	      </startsize>
	      <endsize>
        <value>0.01</value>
	      </endsize>
		      <life-sec>
	        <value>1.0</value>
	      </life-sec>
	      <mass-kg>1.0</mass-kg>
	      <radius-m>0.1</radius-m>
		    </particle>
	    
	    <program>
	      <fluid>water</fluid>
	      <gravity>enabled</gravity>
	      <wind>disabled</wind>
	    </program>
	    
	</particlesystem>


</PropertyList>
