 <!-- Map Keys -->
 <input>
    <keyboard>
      <key n="12"> 
          <name>Ctrl-L</name>
          <desc>Toggle Tailwheel Lock.</desc>
          <binding> 
            <command>property-toggle</command>
            <property>controls/gear/tailwheel-lock</property>
          </binding>
      </key>

      <key n="67">
        <name>C</name>
        <desc>close Cowlflaps</desc>
        <binding> 
          <command>nasal</command>
          <script>f4u.close_cowlflaps()</script>
        </binding>
      </key>
      <key n="99">
        <name>c</name>
        <desc>open Cowlflaps</desc>
        <binding> 
          <command>nasal</command>
          <script>f4u.open_cowlflaps()</script>
        </binding>
      </key>

      <key n="68">
        <name>D</name>
        <desc>Toggle Cowl Flaps</desc>
        <binding>
          <command>nasal</command>
          <script>f4u.toggle_cowlflaps()</script>
        </binding>
      </key>
      <key n="102">
        <name>f</name>
        <desc>shift Blower down</desc>
        <binding> 
          <command>nasal</command>
          <script>f4u.shift_blower_dn()</script>
        </binding>
      </key>

      <key n="70">
        <name>F</name>
        <desc>shift Blower up</desc>
        <binding>
          <command>nasal</command>
          <script>f4u.shift_blower_up()</script>
        </binding>
      </key>
<!-- boost levels: neutral 0.3, low Blower 0.75, high Blower 1.0 -->
      <key n="3">
        <name>Ctrl-c</name>
        <desc>Toggle Canopy.</desc>
        <binding>
          <command>nasal</command>
          <script>f4u.toggle_canopy()</script>
        </binding>
			</key>
      <key n="6">
        <name>Ctrl-f</name>
        <desc>Toggle Wingfold.</desc>
        <binding>
          <command>nasal</command>
          <script>f4u.toggle_wingfold()</script>
        </binding>
      </key>
        <key n="111"> 
          <name>o</name>
          <desc>Hook down.</desc>
          <binding> 
            <command>property-assign</command>
            <property>controls/gear/tailhook</property>    <selected type="bool">false</selected>
            <value type="double">1.0</value>
          </binding>
        </key>
        <key n="79"> 
          <name>O</name>
          <desc>Hook Up.</desc>
          <binding> 
            <command>property-assign</command>
            <property>controls/gear/tailhook</property>
            <value type="double">0.0</value>
          </binding>
        </key>
      <key n="100"> 
        <name>d</name>
        <desc>Toggle Master Arm on</desc>
        <binding> 
          <command>property-adjust</command>
          <property>/controls/armament/master-arm</property>
          <step type="double">1</step>
          <min type="double">0</min>
          <max type="double">1</max>
        </binding>
      </key>
      <key n="68"> 
        <name>D</name>
        <desc>Toggle Master Arm off</desc>
        <binding> 
          <command>property-adjust</command>
          <property>/controls/armament/master-arm</property>
          <step type="double">-1</step>
          <min type="double">0</min>
          <max type="double">1</max>
        </binding>
      </key>
      <key n="101">
        <name>e</name>
        <desc>Fire MG</desc>
        <binding>
          <command>nasal</command>
          <script>weapons.fire_MG()</script>
        </binding>
        <mod-up>
          <binding>
            <command>nasal</command>
            <script>weapons.stop_MG()</script>
          </binding>
        </mod-up>
      </key>

     </keyboard>
 </input>

